{
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react",
    "lib": ["ES2020", "DOM", "WebWorker", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [
      "@types/react",
      "@types/react-dom",
      "vite/client",
      "vite-plugin-pwa/info",
      "vite-plugin-pwa/pwa-assets"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["*.d.ts", "src/components/*.ts", "src/components/*.tsx", "src/sw/*.ts"],
  "exclude": ["node_modules", "dist"]
}
